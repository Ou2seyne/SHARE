{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
            Accueil
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 bg-light p-4 m-0 text-primary shadow-sm rounded">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr class="fw-bold text-primary">
                                <th scope="col">Nom</th>
                                <th scope="col">Message</th>
                                <th scope="col">Email</th>
                                <th scope="col">Date d'Envoi</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if contact %}
                                <tr class="table-primary">
                                    <td>{{ contact.nom | capitalize }}</td>
                                    <td>{{ contact.message | lower }}</td>
                                    <td>{{ contact.email | lower }}</td>
                                    <td>{{ contact.dateEnvoi | date("d-m-Y à H:i:s") }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucun contact trouvé.</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
