{% extends 'base.html.twig' %}
{% block title %}
{{parent()}}Liste des fichiers
{% endblock %}
{% block body %}
<div class="container-fluid">
<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
Liste des fichier</h1>
<div class="row justify-content-center">
<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
<div class="table-responsive">
<table class="table table-hover">
<thead>
<tr class="fw-bold text-primary">
<th scope="col">Nom Original</th>
<th scope="col">Nom Serveur</th>
 <th scope="col">Date d'envoie</th>
<th scope="col">Extension</th>
<th scope="col">User</th>
</tr>
</thead>
<tbody>
{% for fichier in fichier %}
<tr class="{{ cycle(['table-primary',
'table-secondary'], loop.index0) }}">
<td>{{ fichier.nomOriginal | capitalize }}</td>
<td>{{ fichier.nomServeur | capitalize }}</td>
 <td>{{ fichier.dateEnvoi | date("d-m-Y ") }}</td>
<td>{{ fichier.extension | lower }}</td>
<td><a href="{{ path("app_nombre_fichier", {'id': fichier.id}) }}">{{ fichier.user.nom }} {{ fichier.user.prenom }}</a></td>

</tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
</div>
</div>
{% endblock %}
