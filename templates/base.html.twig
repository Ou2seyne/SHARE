<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Share - {% endblock %}</title>
    <link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="nav-link" href="{{ path('app_propos') }}"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_accueil') }}">Accueil</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">CONTACT</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('app_contact') }}">Contact</a>
                            <a class="dropdown-item" href="{{ path('app_liste_contacts') }}">Liste Des Commentaire</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categorie</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
                            <a class="dropdown-item" href="{{ path('app_categorie') }}">Ajout Categorie</a>
                            <a class="dropdown-item" href="{{ path('app_liste_categories') }}">Liste Des Categorie</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown3" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Fichier</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown3">
                            <a class="dropdown-item" href="{{ path('app_ajout_fichier') }}">Ajout Fichier</a>
                            <a class="dropdown-item" href="{{ path('app_liste_fichiers') }}">Liste Des Fichier</a>
                        </div>
                    </li>
                    <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sous Categorie</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownUser">
                            <li><a class="dropdown-item" href="{{path('app_ajout_scategorie') }}">Ajout de Sous Categorie</a>
                            <a class="dropdown-item" href="{{path('scategorie_liste')}}">Liste Des Sous Categorier</a></li>
                        </ul>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_propos') }}">A PROPOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_mention') }}">MENTION LEGALE</a>
                    </li>
                </ul>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">User</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownUser">
                            <li><a class="dropdown-item" href="{{ path('app_liste_utilisateurs') }}">Liste des Utilisateurs</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile') }}">Profile</a>
                    </li>
                    <!-- Authentication Links -->
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_register') }}">S'inscrire</a>
                        </li>
                        
                    {% else %}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MOD') %}
                            <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logs') }}">LOGS<i class="bi bi-x-circle-fill"></i></a>
                        </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">{{ app.user.email }} <i class="bi bi-x-circle-fill"></i></a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    {% for message in app.flashes('notice') %}
        <h2 class="alert alert-warning text-center mt-4 mb-4" role="alert">
            {{ message }}
        </h2>
    {% endfor %}
    {% block body %}Share{% endblock %}
</body>
</html>
