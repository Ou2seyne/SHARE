{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des utilisateurs
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
            Liste des utilisateurs
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary shadow rounded">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr class="fw-bold text-primary">
                                <th scope="col">Email</th>
                                <th scope="col">Date d'inscription</th>
                                <th scope="col">Rôles</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in user|sort((a, b) => b.dateEnvoi <=> a.dateEnvoi) %}
                                <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                    <td>{{ user.email | lower }}</td>
                                    <td>{{ user.dateEnvoi | date("d-m-Y à H:i:s") }}</td>
                                    <td>
                                        {% if 'ROLE_MOD' in user.roles %}
                                            <span class="badge bg-warning text-dark">Modérateur</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Utilisateur normal</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Aucun utilisateur trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
