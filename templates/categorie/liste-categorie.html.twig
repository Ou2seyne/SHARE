{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des catégories
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
            Liste des Catégories
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 bg-light p-4 shadow-lg rounded">
                <div class="table-responsive">
                    {{ form_start(form) }}
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-primary">
                            <tr class="fw-bold text-center text-uppercase">
                                <th scope="col">Libellé</th>
                                <th scope="col">Sous-catégories</th>
                                <th scope="col">Modifier</th>
                                <th scope="col">Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for categorie in categories | sort((a, b) => a.libelle <=> b.libelle) %}
                                <tr class="{{ cycle(['table-light', 'table-white'], loop.index0) }}">
                                    <td class="text-capitalize">{{ categorie.libelle }}</td>
                                    <td>
                                        {% if categorie.scategories | length > 0 %}
                                            <ul class="list-unstyled">
                                                {% for sc in categorie.scategories | sort((a, b) => a.numero <=> b.numero) %}
                                                    <li class="mb-2 d-flex justify-content-between align-items-center">
                                                        <span>
                                                            {{ sc.numero }} - {{ sc.libelle | capitalize }}
                                                        </span>
                                                        <a href="{{ path('app_modifier_sous_categorie', {'id': sc.id}) }}" class="btn btn-outline-secondary btn-sm ms-2">
                                                            <i class="bi bi-pencil"></i> Modifier
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <span class="text-muted">Aucune sous-catégorie</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('app_modifier_categorie', {'id': categorie.id}) }}" class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-pencil-fill"></i> Modifier
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('app_supprimer_categorie', {'id': categorie.id}) }}" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash-fill"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
