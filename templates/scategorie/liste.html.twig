{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Sous-Catégories</h1>

        <div class="row">
            {% for scategorie in scategories %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ scategorie.libelle }}</h5>
                            <p class="card-text"><strong>Numéro:</strong> {{ scategorie.numero }}</p>
                            <p class="card-text"><strong>Catégorie:</strong> {{ scategorie.categorie.id }}</p>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_modifier_sous_categorie', {id: scategorie.id}) }}" class="btn btn-warning">Modifier</a>
                                <form action="{{ path('app_supprimer_sous_categorie', {id: scategorie.id}) }}" method="post" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ scategorie.id) }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        Aucune sous-catégorie trouvée.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
