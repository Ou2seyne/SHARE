{% extends 'base.html.twig' %}

{% block title %}Liste des Sous-Catégories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="my-4 text-primary">Liste des Sous-Catégories</h1>

        <div class="mb-3">
            <a href="{{ path('app_create_subcategory') }}" class="btn btn-success">Ajouter une Sous-Catégorie</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Libellé</th>
                        <th>Numéro</th>
                        <th>Catégorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for scategorie in scategories %}
                        <tr>
                            <td>{{ scategorie.id }}</td>
                            <td>{{ scategorie.libelle }}</td>
                            <td>{{ scategorie.numero }}</td>
                            <td>{{ scategorie.categorie.libelle }}</td>
                            <td>
                                <a href="{{ path('app_edit_subcategory', { id: scategorie.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <form action="{{ path('app_delete_subcategory', { id: scategorie.id }) }}" method="POST" style="display:inline;">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ scategorie.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette sous-catégorie ?');">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucune sous-catégorie trouvée.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
